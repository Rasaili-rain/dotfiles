{
	// Terminal Settings
	"terminal.integrated.cursorBlinking": true, 
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorStyleInactive": "underline",
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.allowChords": true,
	"terminal.integrated.shellIntegration.enabled": true,
	"terminal.explorerKind": "external",
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell",
			"args": [
				"-NoExit",
				"-Command",
				"& {Import-Module PSReadLine}"
			]
		}
	},
	"terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
	"terminal.integrated.env.windows": {
		"VSCODE_CUSTOM_SHELL": "true"
	},
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.windowsEnableConpty": true,
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.defaultLocation": "editor",
	"terminal.integrated.fontFamily": "JetBrains Mono, Consolas",
	// Editor Settings
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.tabCompletion": "on",
	"editor.acceptSuggestionOnEnter": "off",
	"editor.inlineSuggest.enabled": false,
	"editor.fontLigatures": true,
	"editor.fontFamily": "Iosevka, JetBrains Mono, Consolas, 'Courier New', monospace",
	"editor.fontSize": 18,
	"editor.fontVariations": false,
	"editor.minimap.renderCharacters": false,
	"editor.cursorStyle": "line",
	"editor.cursorBlinking": "smooth",
	"workbench.sideBar.location": "right",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.tabSizingFixedMaxWidth": 100,
	"workbench.editor.tabSizingFixedMinWidth": 38,
	"workbench.startupEditor": "none",
	// Window Settings
	"window.density.editorTabHeight": "compact",
	"window.customTitleBarVisibility": "windowed",
	"window.commandCenter": false,
	"window.zoomLevel": 0,
	"window.newWindowDimensions": "inherit",
	"window.restoreWindows": "all",
	"window.titleBarStyle": "custom",

	// Language Specific Settings
	"editor.detectIndentation": false,
	"[csharp]": {
		"editor.formatOnSave": true
	},
	"omnisharp.enableEditorConfigSupport": true,
	"[rust]": {
		"editor.semanticHighlighting.enabled": true,
		"editor.inlayHints.enabled": "offUnlessPressed",
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "rust-lang.rust-analyzer"
	},
	"explorer.confirmDelete": false,
	"git.openRepositoryInParentFolders": "never",
	"explorer.confirmDragAndDrop": false,
	"debug.onTaskErrors": "showErrors",
	"diffEditor.hideUnchangedRegions.enabled": true,
	"editor.minimap.enabled": false,
	"workbench.layoutControl.enabled": false,
	"window.menuBarVisibility": "toggle",
	"codeviz.analyticsEnabled": true,
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"explorer.fileNesting.patterns": {
		"*.ts": "${capture}.js",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
		"*.sqlite": "${capture}.${extname}-*",
		"*.db": "${capture}.${extname}-*",
		"*.sqlite3": "${capture}.${extname}-*",
		"*.db3": "${capture}.${extname}-*",
		"*.sdb": "${capture}.${extname}-*",
		"*.s3db": "${capture}.${extname}-*"
	},
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"git.autofetch": true
}